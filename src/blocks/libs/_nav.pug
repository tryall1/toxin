- var newest = [{'name': 'О нас', 'link': '/'}, {'name': 'Услуги', 'link': '/about-us', 'subitems': [{'name': 'Консультации', 'link': '/consulting'}, {'name': 'Разработка', 'link': '/development'}, {'name': 'Проектирование', 'link': '/project'}]}, {'name': 'Вакансии', 'link': '/vacancy'}, {'name': 'Новости', 'link': '/news'}, {'name': 'Соглашения', 'link': '/agreements', 'subitems': [{'name': 'Пользовательское соглашение', 'link': '/user-agreement'}, {'name': 'Политика конфиденциальности', 'link': '/privacy-policy'}]}]
- var current_url = '/'
- var auth = false

mixin nav(navItems=newest, style='navbar')
   ul(class=style)
      each key in navItems
         li.nav__item
               a(href=key.link class=(key.link === current_url ? "nav__link nav__link--active" : "nav__link"))=key.name
               if key.subitems
                  div.expander-icon
                  ul.nav__submenu
                     each subitem in key.subitems
                        li.nav__subitem
                           a(href=subitem.link).nav__sublink=subitem.name